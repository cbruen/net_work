<%= form_for  [user, degree]  do |f| %>

<% if user.errors[:name].empty? %>
    <div class="field">
<% else %>
    <div class="field_with_errors">
<% end %>
    <%= f.label "Degree" %>
    <%= f.text_field :name %>
  </div>

<% if user.errors[:name].empty? %>
  <div class="field">
<% else %>
  <div class="field_with_errors">
<% end %>
    <%= f.label :gpa %>
    <%= f.text_field :gpa %>
  </div>

  <%= f.fields_for :school do |sch| %>
	  <%= sch.label "School Name" %>
	  <%= sch.text_field :name, list: "schools_autocomplete"%>
	   <datalist id="schools_autocomplete">
	      <%= School.all.each do |school| %>
	       <option value="<%= school.name %>">
	      <% end %>
	  </datalist>
	  </br>
	   <%= sch.label :city %>
	   <%= sch.text_field :city %>
     <% end %>
  </br>
  <%= f.submit %>
<% end %>
